<section class="index">
  <header>
    <h1>Ladder</h1>
  </header>
  <main>
    <ul class="ladder">
      {{#each this.model as |player|}}
        <li>
          <span class="name">
            <TypedText @text={{player.name}}/>
          </span>
          <span class="score">
            <TypedText @text={{player.elo}} />
          </span>
        </li>
      {{/each}}
    </ul>
    {{#unless this.model.length}}
      <p class="empty">There are no known players at this point</p>
    {{/unless}}
  </main>
  <footer>
    <div class="actions">
      <LinkTo @route="new-session" class="button">Start Session</LinkTo>
    </div>
  </footer>
</section>
